{
  "name": "@brakebein/webgl-wind",
  "version": "1.0.0",
  "description": "Wind power visualization with WebGL particles",
  "main": "dist/wind-gl.js",
  "types": "types/index.d.ts",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "test": "eslint src/*.js demo/index.js data/prepare.js",
    "serve": "st -nc -i index.html",
    "start": "run-p serve watch"
  },
  "keywords": [
    "webgl",
    "particles",
    "canvas",
    "wind",
    "map",
    "heatmap"
  ],
  "author": "Vladimir Agafonkin",
  "contributors": [{
    "name": "Brakebein",
    "url": "https://github.com/Brakebein"
  }],
  "license": "ISC",
  "files": [
    "dist",
    "types"
  ],
  "devDependencies": {
    "@rollup/plugin-buble": "^0.21.3",
    "eslint": "^8.12.0",
    "eslint-config-mourner": "^3.0.0",
    "npm-run-all": "^4.0.1",
    "pngjs": "^6.0.0",
    "rollup": "^2.70.1",
    "rollup-plugin-string": "^3.0.0",
    "rollup-watch": "^4.3.1",
    "st": "^3.0.0"
  },
  "eslintConfig": {
    "extends": "mourner",
    "parserOptions": {
      "sourceType": "module"
    },
    "globals": {
      "dat": false,
      "WindGL": false
    },
    "rules": {
      "linebreak-style": "off",
      "no-var": 2,
      "object-curly-spacing": ["error", "always"],
      "prefer-const": 2
    }
  }
}
